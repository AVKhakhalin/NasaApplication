<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tablayout_search_in_nasa_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_archive_tab"
        android:drawablePadding="@dimen/tablayout_search_in_nasa_archive_drawable_padding"
        android:gravity="center_vertical"
        android:text="@string/tablayout_search_in_nasa_archive_text"
        android:textStyle="bold"
        android:fontFamily="@font/aldrich"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/tablayout_search_in_nasa_archive_text_size"/>
</FrameLayout>