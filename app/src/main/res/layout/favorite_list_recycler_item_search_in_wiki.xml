<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondary" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler_item_search_in_wiki_arrows_container"
        android:layout_width="@dimen/recycler_item_search_in_wiki_arrows_container_width"
        android:layout_height="@dimen/recycler_item_search_in_wiki_arrows_container_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recycler_item_search_in_wiki_arrow_up"
            android:layout_width="@dimen/recycler_item_search_in_wiki_arrow_up_width"
            android:layout_height="@dimen/recycler_item_search_in_wiki_arrow_up_height"
            android:layout_marginStart="@dimen/recycler_item_search_in_wiki_arrow_up_margin_start"
            android:translationY="@dimen/recycler_item_search_in_wiki_arrow_up_translation_y"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_arrow_up" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recycler_item_search_in_wiki_arrow_down"
            android:layout_width="@dimen/recycler_item_search_in_wiki_arrow_down_width"
            android:layout_height="@dimen/recycler_item_search_in_wiki_arrow_down_height"
            android:layout_marginStart="@dimen/recycler_item_search_in_wiki_arrow_down_margin_start"
            android:translationY="@dimen/recycler_item_search_in_wiki_arrow_down_translation_y"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_arrow_down" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recycler_item_search_in_wiki_priority_high"
        android:layout_width="@dimen/recycler_item_search_in_wiki_priority_high_width"
        android:layout_height="@dimen/recycler_item_search_in_wiki_priority_high_height"
        android:layout_marginEnd="@dimen/recycler_item_search_in_wiki_priority_high_margin_end"
        app:layout_constraintEnd_toStartOf="@id/recycler_item_search_in_wiki_arrows_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_circle_red_high" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recycler_item_search_in_wiki_priority_normal"
        android:layout_width="@dimen/recycler_item_search_in_wiki_priority_normal_width"
        android:layout_height="@dimen/recycler_item_search_in_wiki_priority_normal_height"
        android:layout_marginEnd="@dimen/recycler_item_search_in_wiki_priority_normal_margin_end"
        app:layout_constraintEnd_toStartOf="@id/recycler_item_search_in_wiki_priority_high"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_circle_green_normal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recycler_item_search_in_wiki_priority_low"
        android:layout_width="@dimen/recycler_item_search_in_wiki_priority_low_width"
        android:layout_height="@dimen/recycler_item_search_in_wiki_priority_low_height"
        android:layout_marginEnd="@dimen/recycler_item_search_in_wiki_priority_low_margin_end"
        app:layout_constraintEnd_toStartOf="@id/recycler_item_search_in_wiki_priority_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_circle_white_low" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recycler_item_search_in_wiki_type_image"
        android:layout_width="@dimen/recycler_item_search_in_wiki_type_image_width"
        android:layout_height="@dimen/recycler_item_search_in_wiki_type_image_height"
        android:layout_marginEnd="@dimen/recycler_item_search_in_wiki_type_image_margin_end"
        android:background="?attr/colorOnBackground"
        app:layout_constraintEnd_toStartOf="@id/recycler_item_search_in_wiki_priority_low"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_wikipedia" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recycler_item_search_in_wiki_item_title"
        android:layout_width="@dimen/recycler_item_search_in_wiki_item_title_width"
        android:layout_height="match_parent"
        android:text="@string/recycler_item_search_in_wiki_item_title_text"
        android:textColor="?attr/color"
        android:textSize="@dimen/recycler_item_search_in_wiki_item_title_text_size"
        android:layout_marginStart="@dimen/recycler_item_search_in_wiki_item_title_margin_start"
        android:layout_marginEnd="@dimen/recycler_item_search_in_wiki_item_title_margin_end"
        app:layout_constraintEnd_toStartOf="@+id/recycler_item_search_in_wiki_type_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recycler_item_search_in_wiki_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recycler_item_search_in_wiki_item_description_text"
        android:textColor="?attr/color"
        android:textSize="@dimen/recycler_item_search_in_wiki_item_description_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_search_in_wiki_type_image"
        android:visibility="gone"/>

    <View
        android:id="@+id/recycler_item_search_in_wiki_horizontal_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_search_in_wiki_horizontal_border_height"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
