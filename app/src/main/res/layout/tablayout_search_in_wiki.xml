<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tablayout_search_in_wiki_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search_tab"
        android:drawablePadding="@dimen/tablayout_search_in_wiki_icon_drawable_padding"
        android:gravity="center_vertical"
        android:text="@string/tablayout_search_in_wiki_icon_text"
        android:textStyle="bold"
        android:fontFamily="@font/aldrich"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/tablayout_search_in_wiki_icon_text_size"/>
</FrameLayout>