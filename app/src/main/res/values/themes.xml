<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
            <!--The color displayed most frequently across your app’s screens and components.
            This color should pass accessibilty guidelines for text / iconography when drawn on top
            of the surface or background color.
            Цвет рамки вокруг текстового поля с поиском информации в Википедии-->
        <item name="colorPrimary">@color/color_primary</item>
            <!--Surface colors affect surfaces of components, such as cards, sheets, and menus-->
        <item name="colorSurface">@color/activity_background</item>
            <!--Цвет вехрне линии на экране-->
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Применение собственных стилей компонентам -->
        <item name="chipStyle">@style/ChipTextAppearance.Base</item>
        <item name="textInputStyle">@style/CustomOutlinedBox</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <!-- РАСШИФРОВКИ СТИЛЕЙ -->

    <!-- Переопределение стиля чипсов -->
    <style name="ChipTextAppearance.Base" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/color_accent</item>
        <item name="rippleColor">@color/color_primary</item>
    </style>

    <!-- Переопределение стиля текстового поля для поиска в Википедии -->
    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="counterOverflowTextColor">@color/color_accent</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
    </style>

    <!-- Переопределение стиля текствого элемента TextView -->
    <style name="CustomTextView">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>